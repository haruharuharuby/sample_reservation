<% provide(:title, "Reservation input") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <label>氏名</label>
      <%= f.text_field :loginid, class: 'form-control' %>

      <label>電話番号</label>
      <%= f.text_field :password, class: 'form-control' %>

      <label>メールアドレス</label>
      <%= f.email_field :password, class: 'form-control' %>

      <%= f.submit "予約する", class: "btn btn-primary center-block" %>
    <% end %>
  </div>
</div>
